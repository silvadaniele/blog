<%= form_for(comment, url: url, method: method) do |f| %>
  <% if comment.errors.any? %>
    <h2>Errors:</h2>
    <ul>
      <% comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= f.label(:author, "Name:") %>
  <%= f.text_field(:author) %>
  <br/>
    <%= f.label(:body, "Comment:") %>
  <%= f.text_field(:body) %>
  <br/>
  <%= f.submit("Save") %>
<% end %>
